@model IEnumerable<ModelViewsDemo.Models.Product>

<div>
    <table>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Link</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@Html.ActionLink("Detail","Details",new { id=item.ProductID})</td>
            </tr>
        }
    </table>
</div>